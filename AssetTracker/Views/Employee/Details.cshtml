@model AssetTracker.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Index">Wróć do listy</a>
</div>

<div class="row">
    <div class="col-3">
        <div class="card text-center p-2 shadow-lg rounded-3">
            <img src="https://st3.depositphotos.com/15648834/17930/v/450/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" class="card-img-top rounded-circle" alt="Alternate Text" />
            <div class="card-body">
                <h5 class="card-title">@Model?.Name @Model?.Surname</h5>
                <button class="btn btn-warning editEmployeeBtn" data-id="@Model?.Id" data-bs-toggle="modal" data-bs-target="#addEmployeeModal"><i class="bi bi-pencil-square text-white"></i></button>
                <button class="btn btn-danger"><i class="bi bi-trash3 text-white"></i></button>
                <button type="button" id="addAssetToEmployeeBtn" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#addAssetToEmployeeModal">Przydziel zasoby do pracownika</button>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body shadow-lg">
                <h5 class="card-title mb-4">Dodatkowe Informacje</h5>
                <dl class="row">
                    <dt class="col-sm-2">
                        Imię:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Nazwisko:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Surname)
                    </dd>
                    <dt class="col-sm-2">
                        Stanowisko:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Position)
                    </dd>
                    <dt class="col-sm-2">
                        Miejsce pracy:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Workplace)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<partial name="_ModalsEmployeePartialView" />

<div class="modal fade" id="addAssetToEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modal-employee-title" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Przydziel zasoby</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="AddAssetsToEmployeeForm">
                <input type="hidden" id="employeeId" value="@Model?.Id"/>
                <div class="modal-body">
                    <table id="addAssetToEmployeeTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Nazwa
                                </th>
                                <th>
                                    Model
                                </th>
                                <th>
                                    Numer Seryjny
                                </th>
                                <th>
                                    Kod Zasobu
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                    <button type="submit" id="submit-assets-to-employee-btn" class="btn btn-primary">Przydziel</button>
                </div>
            </form>
        </div>
    </div>
</div>
